<%= form_for(@value, :url => add_value_to_measure_url(@measure), :html => {:class => 'well form-inline'}) do |f| %>
  <div id="error_explanation" class="error">
    <a class="dismiss delete_parent"></a>
    <ul>
      <% @value.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <%= f.text_field :value, :placeholder => "Input new value" %>
  <%= f.text_field :at %>

  <%= submit_tag 'Add', :class => 'btn btn-primary' %>
<% end %>


<table class="values">
  <thead>
    <tr>
      <td>Value</td>
      <td>Date</td>
    </tr>
  </thead>
  <tbody>
    <% @measure.values.each do |value| %>
      <tr class="value">
        <td class="value"><%= value.value %></td>
        <td class="at"><%= value.at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
